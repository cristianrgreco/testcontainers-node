{
  "name": "testcontainers",
  "author": "Cristian Greco",
  "version": "3.4.4",
  "main": "dist/index",
  "types": "dist/index",
  "keywords": [
    "docker",
    "testcontainers"
  ],
  "files": [
    "dist"
  ],
  "description": "Testcontainers is a NodeJS library that supports tests, providing lightweight, throwaway instances of common databases, Selenium web browsers, or anything else that can run in a Docker container.",
  "license": "MIT",
  "homepage": "https://github.com/testcontainers/testcontainers-node#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/testcontainers/testcontainers-node"
  },
  "bugs": {
    "url": "https://github.com/testcontainers/testcontainers-node/issues"
  },
  "scripts": {
    "prepublish": "npm run build",
    "build": "npm run clean && tsc",
    "clean": "rimraf dist",
    "test": "DEBUG=testcontainers jest",
    "format": "prettier --write package.json 'src/**/*.ts'",
    "updateDeps": "npx npm-check-updates -u",
    "version:major": "npm --no-git-tag-version version major",
    "version:minor": "npm --no-git-tag-version version minor",
    "version:patch": "npm --no-git-tag-version version patch"
  },
  "dependencies": {
    "@types/dockerode": "^2.5.34",
    "byline": "^5.0.0",
    "debug": "^4.1.1",
    "docker-compose": "^0.23.5",
    "dockerode": "^3.2.1",
    "get-port": "^5.1.1",
    "glob": "^7.1.6",
    "node-duration": "^1.0.4",
    "stream-to-array": "^2.3.0",
    "tar-fs": "^2.1.0"
  },
  "devDependencies": {
    "@types/byline": "^4.2.32",
    "@types/debug": "4.1.5",
    "@types/glob": "^7.1.3",
    "@types/jest": "^26.0.13",
    "@types/node": "^14.10.1",
    "@types/node-fetch": "^2.5.7",
    "@types/stream-to-array": "^2.3.0",
    "@types/tar-fs": "^2.0.0",
    "arangojs": "^6.14.1",
    "husky": "^4.3.0",
    "jest": "^26.4.2",
    "kafkajs": "^1.13.0",
    "lint-staged": "^10.3.0",
    "neo4j-driver": "^4.1.2",
    "node-fetch": "^2.6.1",
    "prettier": "^2.1.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.3.0",
    "ts-node": "^9.0.0",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.ts": [
      "prettier --write",
      "tslint --fix"
    ]
  }
}
